<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_container"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayarlar"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFİL"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="İsim Soyisim"
                            android:textColor="#1E293B"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/set_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kullanıcı"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_edit_name"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_marginStart="8dp"
                            app:tint="#94A3B8"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Günlük Hedef"
                            android:textColor="#1E293B"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/set_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2500 ml"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_edit_goal"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_marginStart="8dp"
                            app:tint="#94A3B8"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cinsiyet"
                            android:textColor="#1E293B"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/set_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Erkek"
                            android:textColor="#475569"/>
                        <ImageView
                            android:id="@+id/btn_edit_gender"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_marginStart="8dp"
                            app:tint="#94A3B8"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ağırlık"
                            android:textColor="#1E293B"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/set_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70 kg"
                            android:textColor="#475569"/>
                        <ImageView
                            android:id="@+id/btn_edit_weight"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_marginStart="8dp"
                            app:tint="#94A3B8"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Boy"
                            android:textColor="#1E293B"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/set_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="170 cm"
                            android:textColor="#475569"/>
                        <ImageView
                            android:id="@+id/btn_edit_height"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_marginStart="8dp"
                            app:tint="#94A3B8"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="PROFİLİ SIFIRLA"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="#EF4444"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_water_hero"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profilini Oluştur"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sana özel su hedefini hesaplayalım"
            android:textSize="14sp"
            android:textColor="#94A3B8"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İsim Soyisim"
                android:textStyle="bold"
                android:textColor="#475569"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Örn: Resul Argın"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:padding="16dp"
                android:background="@drawable/bg_input_field"
                android:inputType="textPersonName"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boy (cm)"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="170"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_input_field"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilo (kg)"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="70"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_input_field"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinsiyet"
            android:textStyle="bold"
            android:textColor="#475569"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_input_field"
            android:padding="4dp"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btn_male"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Erkek"
                android:background="@null"
                android:textColor="#94A3B8"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_female"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Kadın"
                android:background="@null"
                android:textColor="#94A3B8"
                android:textAllCaps="false"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete_setup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="HESABI OLUŞTUR"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_primary_button"/>

    </LinearLayout>
</ScrollView>